  "slotFillers": {
    "greeting": {
      "conditions": [
        { "when": "time.hour < 10", "value": "早上好" },
        { "when": "time.hour < 12", "value": "上午好" },
        { "when": "time.hour < 14", "value": "中午好" },
        { "when": "time.hour < 18", "value": "下午好" },
        { "default": "晚上好" }
      ]
    },
    "weekday_name": {
      "mapping": {
        "0": "日", "1": "一", "2": "二", "3": "三",
        "4": "四", "5": "五", "6": "六"
      },
      "source": "time.dayOfWeek"
    },
    "transit_hint": {
      "conditions": [
        { "when": "user.commuteCountToday > 0", "value": "继续上次的行程？" },
        { "default": "为您准备好乘车码" }
      ]
    },
    "audio_env_hint": {
      "mapping": {
        "crowd": "嘈杂",
        "traffic": "有交通声",
        "silence": "相对安静",
        "speech": "有人交谈"
      },
      "source": "audio.topLabel",
      "default": "正常"
    }
