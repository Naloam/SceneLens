  "defaultSlotFillers": {
    "greeting": {
      "type": "conditional",
      "conditions": [
        { "when": "time.hour >= 5 && time.hour < 7", "values": ["早安", "清晨好"] },
        { "when": "time.hour >= 7 && time.hour < 11", "values": ["早上好", "上午好"] },
        { "when": "time.hour >= 11 && time.hour < 13", "values": ["中午好", "午安"] },
        { "when": "time.hour >= 13 && time.hour < 18", "values": ["下午好"] },
        { "when": "time.hour >= 18 && time.hour < 21", "values": ["晚上好", "傍晚好"] },
        { "default": ["夜深了", "晚安"] }
      ]
    },
    "time_period": {
      "type": "conditional",
      "conditions": [
        { "when": "time.hour >= 5 && time.hour < 7", "value": "清晨" },
        { "when": "time.hour >= 7 && time.hour < 11", "value": "上午" },
        { "when": "time.hour >= 11 && time.hour < 13", "value": "中午" },
        { "when": "time.hour >= 13 && time.hour < 18", "value": "下午" },
        { "when": "time.hour >= 18 && time.hour < 21", "value": "傍晚" },
        { "when": "time.hour >= 21", "value": "夜晚" },
        { "default": "深夜" }
      ]
    },
    "encouragement": {
      "type": "random",
      "values": [
        "加油", "继续保持", "你真棒", "做得好", "太棒了",
        "很不错", "继续努力", "保持状态", "非常好", "真厉害"
      ]
    },
    "weekday_name": {
      "type": "mapping",
      "source": "time.dayOfWeek",
      "mapping": {
        "0": "日", "1": "一", "2": "二", "3": "三",
        "4": "四", "5": "五", "6": "六"
      }
    },
    "hour": {
      "type": "direct",
      "source": "time.hour"
    },
    "minute": {
      "type": "direct",
      "source": "time.minute",
      "format": "padStart2"
    },
    "battery": {
      "type": "direct",
      "source": "device.batteryLevel"
    },
    "battery_hint": {
      "type": "conditional",
      "conditions": [
        { "when": "device.batteryLevel < 10", "value": "电量告急" },
        { "when": "device.batteryLevel < 20", "value": "电量偏低" },
        { "when": "device.batteryLevel < 50", "value": "电量一般" },
        { "when": "device.batteryLevel < 80", "value": "电量充足" },
        { "default": "电量满格" }
      ]
    },
    "wifi_ssid": {
      "type": "direct",
      "source": "location.wifiSSID",
      "fallback": "未知网络"
    },
    "image_confidence": {
      "type": "computed",
      "expression": "Math.round(image.confidence * 100)"
    },
    "audio_env_hint": {
      "type": "mapping",
      "source": "audio.topLabel",
      "mapping": {
        "quiet": "安静",
        "crowd": "嘈杂",
        "traffic": "交通声",
        "music": "有音乐",
        "speech": "有交谈",
        "nature": "自然声"
      },
      "default": "正常"
    },
    "specific_place": {
      "type": "direct",
      "source": "location.matchedFence",
      "fallback": "当前位置"
    },
    "work_hint": {
      "type": "random",
      "values": ["工作", "忙碌", "努力", "奋斗"]
    },
    "overtime_hint": {
      "type": "random",
      "values": ["很晚了", "已经很久了", "时间不早了"]
    },
    "context_based_suggestion": {
      "type": "conditional",
      "conditions": [
        { "when": "device.isCharging", "value": "安心充电" },
        { "when": "device.batteryLevel < 20", "value": "注意电量" },
        { "when": "audio.soundEnvironment === 'quiet'", "value": "环境安静" },
        { "when": "audio.soundEnvironment === 'noisy'", "value": "环境嘈杂" },
        { "default": "一切正常" }
      ]
    }
  },
